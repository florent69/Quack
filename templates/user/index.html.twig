{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <div class="container">
    <h1>User index</h1>

    <table class="table">
        <thead>
        <tr>
            {% if is_granted('ROLE_ADMIN') %}
                <th>Id</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Password</th>
            {% endif %}
            <th>Photo</th>
            <th>Duckname</th>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                {% if is_granted('ROLE_ADMIN') %}
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                {% endif %}
                <td>
                    {% if user.photo != null %}
                        <img src="/photos/{{ user.photo }}" class="img-fluid img-thumbnail" style="width:7%">
                    {% endif %}
                </td>
                <td>{{ user.duckname }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>
                    <button>
                        <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    </button>
                    {% if is_granted('edit', user )%}
                        <button>
                            <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                        </button>
                        {{ include('user/_delete_form.html.twig') }}
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if is_granted('ROLE_ADMIN') %}
        <button>
            <a href="{{ path('user_new') }}">Create new</a>
        </button>
    {% endif %}
    </div>
{% endblock %}
